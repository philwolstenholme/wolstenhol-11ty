{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(build.url) }}{%- endset -%}
<meta name="description" content="{{ seo.description or meta.description }}" />
<link rel="canonical" href="{{ absolutePageUrl }}" />

{# Open Graph #}
<meta property="og:site_name" content="{{ meta.title }}" />
<meta property="og:title" content="{% if seo.title %}{{ seo.title }}{% else %}{{ title }} | {{ meta.title }}{% endif %}" />
<meta property="og:description" content="{{ seo.description or meta.description }}" />
<meta property="og:url" content="{{ absolutePageUrl }}" />
<meta property="og:locale" content="{{ meta.locale }}" />
<meta name="twitter:card" content="{% if seo.image or meta.image %}summary_large_image{% else %}summary{% endif %}" />
{% if seo.image or meta.image %}
<meta property="og:image" content="{{ seo.image or meta.image | url | absoluteUrl(build.url) }}" />
{% endif %}

